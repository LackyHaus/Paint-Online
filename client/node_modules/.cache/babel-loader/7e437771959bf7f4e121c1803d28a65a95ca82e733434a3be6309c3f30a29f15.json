{"ast":null,"code":"import { onMounted, ref } from \"vue\";\nimport { webSocketConnection } from \"@/utils/webSocket\";\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\n\nexport default {\n  name: \"PaintCanvas\",\n  setup() {\n    const canvasElement = ref(null);\n    onMounted(() => {\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\n      webSocketConnection(canvasElement.value); // Подключаемся к вебсокету при монтировании компонента\n    });\n    return {\n      canvasElement // Передаем ссылку в шаблон\n    };\n  },\n  methods: {\n    mouseDownHandler() {\n      canvasState.pushToUndo();\n    },\n    keyupHandler(event) {\n      if (event.ctrlKey && event.shiftKey && (event.key === \"Z\" || event.key === \"Я\")) {\n        canvasState.Redo();\n      } else if (event.ctrlKey && (event.key === \"z\" || event.key === \"я\")) {\n        canvasState.Undo();\n      }\n    }\n  },\n  mounted() {\n    document.addEventListener('keyup', this.keyupHandler);\n  },\n  unmounted() {\n    document.removeEventListener('keyup', this.keyupHandler);\n  }\n};","map":{"version":3,"names":["onMounted","ref","webSocketConnection","canvasState","name","setup","canvasElement","setCanvas","value","methods","mouseDownHandler","pushToUndo","keyupHandler","event","ctrlKey","shiftKey","key","Redo","Undo","mounted","document","addEventListener","unmounted","removeEventListener"],"sources":["D:\\Vue Projects\\paintonline\\client\\src\\components\\PaintCanvas.vue"],"sourcesContent":["<template>\r\n  <div class=\"canvas\">\r\n    <canvas @mousedown=\"mouseDownHandler\" ref=\"canvasElement\" width=\"600\" height=\"400\"></canvas>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { onMounted, ref } from \"vue\";\r\nimport { webSocketConnection } from \"@/utils/webSocket\";\r\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\r\n\r\nexport default {\r\n  name: \"PaintCanvas\",\r\n  setup() {\r\n    const canvasElement = ref(null);\r\n    onMounted(() => {\r\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\r\n      webSocketConnection(canvasElement.value); // Подключаемся к вебсокету при монтировании компонента\r\n      \r\n    });\r\n\r\n    return {\r\n      canvasElement, // Передаем ссылку в шаблон\r\n    };\r\n  },\r\n\r\n  methods: {\r\n    mouseDownHandler() {\r\n      canvasState.pushToUndo();\r\n    },\r\n\r\n    keyupHandler(event) {\r\n      if (event.ctrlKey && event.shiftKey && (event.key === \"Z\" || event.key === \"Я\")) {\r\n        canvasState.Redo();\r\n      } else if (event.ctrlKey && (event.key === \"z\" || event.key === \"я\")) {\r\n        canvasState.Undo();\r\n      }\r\n    }\r\n\r\n\r\n\r\n  },\r\n\r\n  mounted () {\r\n  document.addEventListener('keyup', this.keyupHandler)\r\n  },\r\n  unmounted () {\r\n    document.removeEventListener('keyup', this.keyupHandler)\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"../styles/canvas.css\";\r\n</style>\r\n"],"mappings":"AAOA,SAASA,SAAS,EAAEC,GAAE,QAAS,KAAK;AACpC,SAASC,mBAAkB,QAAS,mBAAmB;AACvD,OAAOC,WAAU,MAAO,qBAAqB,EAAE;;AAE/C,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAKA,CAAA,EAAG;IACN,MAAMC,aAAY,GAAIL,GAAG,CAAC,IAAI,CAAC;IAC/BD,SAAS,CAAC,MAAM;MACdG,WAAW,CAACI,SAAS,CAACD,aAAa,CAACE,KAAK,CAAC,EAAE;MAC5CN,mBAAmB,CAACI,aAAa,CAACE,KAAK,CAAC,EAAE;IAE5C,CAAC,CAAC;IAEF,OAAO;MACLF,aAAa,CAAE;IACjB,CAAC;EACH,CAAC;EAEDG,OAAO,EAAE;IACPC,gBAAgBA,CAAA,EAAG;MACjBP,WAAW,CAACQ,UAAU,CAAC,CAAC;IAC1B,CAAC;IAEDC,YAAYA,CAACC,KAAK,EAAE;MAClB,IAAIA,KAAK,CAACC,OAAM,IAAKD,KAAK,CAACE,QAAO,KAAMF,KAAK,CAACG,GAAE,KAAM,GAAE,IAAKH,KAAK,CAACG,GAAE,KAAM,GAAG,CAAC,EAAE;QAC/Eb,WAAW,CAACc,IAAI,CAAC,CAAC;MACpB,OAAO,IAAIJ,KAAK,CAACC,OAAM,KAAMD,KAAK,CAACG,GAAE,KAAM,GAAE,IAAKH,KAAK,CAACG,GAAE,KAAM,GAAG,CAAC,EAAE;QACpEb,WAAW,CAACe,IAAI,CAAC,CAAC;MACpB;IACF;EAIF,CAAC;EAEDC,OAAMA,CAAA,EAAK;IACXC,QAAQ,CAACC,gBAAgB,CAAC,OAAO,EAAE,IAAI,CAACT,YAAY;EACpD,CAAC;EACDU,SAAQA,CAAA,EAAK;IACXF,QAAQ,CAA