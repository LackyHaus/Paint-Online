{"ast":null,"code":"import { onMounted, ref } from \"vue\";\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\nimport toolstate from \"@/store/toolstate\";\nimport Brush from \"@/tools/Brush\";\nexport default {\n  name: \"PaintCanvas\",\n  setup() {\n    const canvasElement = ref(null);\n    onMounted(() => {\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\n      webSocketConnection(); // Подключаемся к вебсокету при монтировании компонента\n    });\n    const webSocketConnection = () => {\n      const ws = new WebSocket(\"ws://localhost:5000/ws\");\n      canvasState.setSessionId(window.location.pathname.split(\"/\").pop());\n      canvasState.setSocket(ws);\n      toolstate.setTool(new Brush(canvasElement.value, ws, canvasState.sessionid));\n      ws.onopen = () => {\n        ws.send(JSON.stringify({\n          id: window.location.pathname.split(\"/\").pop(),\n          method: \"connection\"\n        }));\n\n        // Принятие сообщений\n        ws.onmessage = event => {\n          let msg = JSON.parse(event.data);\n          switch (msg.method) {\n            case \"connection\":\n              break;\n            case \"draw\":\n              drawHandler(msg);\n              break;\n          }\n        };\n      };\n      const drawHandler = msg => {\n        const {\n          figure\n        } = msg;\n        const ctx = canvasElement.value.getContext(\"2d\");\n        ctx.strokeStyle = figure.color;\n        ctx.fillStyle = figure.color;\n        ctx.lineWidth = figure.width;\n        switch (figure.type) {\n          case \"brush\":\n            Brush.draw(ctx, figure.x, figure.y);\n            break;\n          case \"up\":\n            ctx.beginPath();\n            break;\n        }\n      };\n    };\n    return {\n      canvasElement // Передаем ссылку в шаблон\n    };\n  },\n  methods: {\n    mouseDownHandler() {\n      canvasState.pushToUndo();\n    },\n    keyupHandler(event) {\n      if (event.ctrlKey && event.shiftKey && (event.key === \"Z\" || event.key === \"Я\")) {\n        canvasState.Redo();\n      } else if (event.ctrlKey && (event.key === \"z\" || event.key === \"я\")) {\n        canvasState.Undo();\n      }\n    }\n  },\n  mounted() {\n    document.addEventListener('keyup', this.keyupHandler);\n  },\n  unmounted() {\n    document.removeEventListener('keyup', this.keyupHandler);\n  }\n};","map":{"version":3,"names":["onMounted","ref","canvasState","toolstate","Brush","name","setup","canvasElement","setCanvas","value","webSocketConnection","ws","WebSocket","setSessionId","window","location","pathname","split","pop","setSocket","setTool","sessionid","onopen","send","JSON","stringify","id","method","onmessage","event","msg","parse","data","drawHandler","figure","ctx","getContext","strokeStyle","color","fillStyle","lineWidth","width","type","draw","x","y","beginPath","methods","mouseDownHandler","pushToUndo","keyupHandler","ctrlKey","shiftKey","key","Redo","Undo","mounted","document","addEventListener","unmounted","removeEventListener"],"sources":["D:\\Vue Projects\\paintonline\\client\\src\\components\\PaintCanvas.vue"],"sourcesContent":["<template>\r\n  <div class=\"canvas\">\r\n    <canvas @mousedown=\"mouseDownHandler\" ref=\"canvasElement\" width=\"600\" height=\"400\"></canvas>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { onMounted, ref } from \"vue\";\r\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\r\nimport toolstate from \"@/store/toolstate\";\r\nimport Brush from \"@/tools/Brush\";\r\n\r\nexport default {\r\n  name: \"PaintCanvas\",\r\n  setup() {\r\n    const canvasElement = ref(null);\r\n    onMounted(() => {\r\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\r\n      webSocketConnection(); // Подключаемся к вебсокету при монтировании компонента\r\n      \r\n    });\r\n\r\n    const webSocketConnection = () => {\r\n      const ws = new WebSocket(\"ws://localhost:5000/ws\");\r\n\r\n      canvasState.setSessionId(window.location.pathname.split(\"/\").pop());\r\n      canvasState.setSocket(ws);\r\n\r\n      toolstate.setTool(new Brush(canvasElement.value, ws, canvasState.sessionid));\r\n\r\n      ws.onopen = () => {\r\n        ws.send(JSON.stringify({\r\n          id: window.location.pathname.split(\"/\").pop(), \r\n          method: \"connection\",\r\n        }));\r\n\r\n\r\n        // Принятие сообщений\r\n        ws.onmessage = (event) => {\r\n          let msg = JSON.parse(event.data);\r\n          switch (msg.method) {\r\n            case \"connection\":\r\n              break;\r\n            case \"draw\":\r\n              drawHandler(msg);\r\n              break;\r\n          }\r\n        };\r\n\r\n\r\n        \r\n      };\r\n      \r\n      const drawHandler = (msg) => {\r\n        const { figure } = msg;\r\n        const ctx = canvasElement.value.getContext(\"2d\");\r\n        ctx.strokeStyle = figure.color;\r\n        ctx.fillStyle = figure.color;\r\n        ctx.lineWidth = figure.width;\r\n        switch (figure.type) {\r\n          case \"brush\":\r\n            Brush.draw(ctx, figure.x, figure.y);\r\n            break;\r\n          case \"up\":\r\n            ctx.beginPath();\r\n            break;\r\n        }\r\n      }\r\n    };\r\n\r\n\r\n    return {\r\n      canvasElement, // Передаем ссылку в шаблон\r\n    };\r\n  },\r\n\r\n  methods: {\r\n    mouseDownHandler() {\r\n      canvasState.pushToUndo();\r\n    },\r\n\r\n    keyupHandler(event) {\r\n      if (event.ctrlKey && event.shiftKey && (event.key === \"Z\" || event.key === \"Я\")) {\r\n        canvasState.Redo();\r\n      } else if (event.ctrlKey && (event.key === \"z\" || event.key === \"я\")) {\r\n        canvasState.Undo();\r\n      }\r\n    }\r\n\r\n\r\n\r\n  },\r\n\r\n  mounted () {\r\n  document.addEventListener('keyup', this.keyupHandler)\r\n  },\r\n  unmounted () {\r\n    document.removeEventListener('keyup', this.keyupHandler)\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"../styles/canvas.css\";\r\n</style>\r\n"],"mappings":"AAOA,SAASA,SAAS,EAAEC,GAAE,QAAS,KAAK;AACpC,OAAOC,WAAU,MAAO,qBAAqB,EAAE;AAC/C,OAAOC,SAAQ,MAAO,mBAAmB;AACzC,OAAOC,KAAI,MAAO,eAAe;AAEjC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAKA,CAAA,EAAG;IACN,MAAMC,aAAY,GAAIN,GAAG,CAAC,IAAI,CAAC;IAC/BD,SAAS,CAAC,MAAM;MACdE,WAAW,CAACM,SAAS,CAACD,aAAa,CAACE,KAAK,CAAC,EAAE;MAC5CC,mBAAmB,CAAC,CAAC,EAAE;IAEzB,CAAC,CAAC;IAEF,MAAMA,mBAAkB,GAAIA,CAAA,KAAM;MAChC,MAAMC,EAAC,GAAI,IAAIC,SAAS,CAAC,wBAAwB,CAAC;MAElDV,WAAW,CAACW,YAAY,CAACC,MAAM,CAACC,QAAQ,CAACC,QAAQ,CAACC,KAAK,CAAC,GAAG,CAAC,CAACC,GAAG,CAAC,CAAC,CAAC;MACnEhB,WAAW,CAACiB,SAAS,CAACR,EAAE,CAAC;MAEzBR,SAAS,CAACiB,OAAO,CAAC,IAAIhB,KAAK,CAACG,aAAa,CAACE,KAAK,EAAEE,EAAE,EAAET,WAAW,CAACmB,SAAS,CAAC,CAAC;MAE5EV,EAAE,CAACW,MAAK,GAAI,MAAM;QAChBX,EAAE,CAACY,IAAI,CAACC,IAAI,CAACC,SAAS,CAAC;UACrBC,EAAE,EAAEZ,MAAM,CAACC,QAAQ,CAACC,QAAQ,CAACC,KAAK,CAAC,GAAG,CAAC,CAACC,GAAG,CAAC,CAAC;UAC7CS,MAAM,EAAE;QACV,CAAC,CAAC,CAAC;;QAGH;QACAhB,EAAE,CAACiB,SAAQ,GAAKC,KAAK,IAAK;UACxB,IAAIC,GAAE,GAAIN,IAAI,CAACO,KAAK,CAACF,KAAK,CAACG,IAAI,CAAC;UAChC,QAAQF,GAAG,CAACH,MAAM;YAChB,KAAK,YAAY;cACf;YACF,KAAK,MAAM;cACTM,WAAW,CAACH,GAAG,CAAC;cAChB;UACJ;QACF,CAAC;MAIH,CAAC;MAED,MAAMG,WAAU,GAAKH,GAAG,IAAK;QAC3B,MAAM;UAAEI;QAAO,IAAIJ,GAAG;QACtB,MAAMK,GAAE,GAAI5B,aAAa,CAACE,KAAK,CAAC2B,UAAU,CAAC,IAAI,CAAC;QAChDD,GAAG,CAACE,WAAU,GAAIH,MAAM,CAACI,KAAK;QAC9BH,GAAG,CAACI,SAAQ,GAAIL,MAAM,CAACI,KAAK;QAC5BH,GAAG,CAACK,SAAQ,GAAIN,MAAM,CAACO,KAAK;QAC5B,QAAQP,MAAM,CAACQ,IAAI;UACjB,KAAK,OAAO;YACVtC,KAAK,CAACuC,IAAI,CAACR,GAAG,EAAED,MAAM,CAACU,CAAC,EAAEV,MAAM,CAACW,CAAC,CAAC;YACnC;UACF,KAAK,IAAI;YACPV,GAAG,CAACW,SAAS,CAAC,CAAC;YACf;QACJ;MACF;IACF,CAAC;IAGD,OAAO;MACLvC,aAAa,CAAE;IACjB,CAAC;EACH,CAAC;EAEDwC,OAAO,EAAE;IACPC,gBAAgBA,CAAA,EAAG;MACjB9C,WAAW,CAAC+C,UAAU,CAAC,CAAC;IAC1B,CAAC;IAEDC,YAAYA,CAACrB,KAAK,EAAE;MAClB,IAAIA,KAAK,CAACsB,OAAM,IAAKtB,KAAK,CAACuB,QAAO,KAAMvB,KAAK,CAACwB,GAAE,KAAM,GAAE,IAAKxB,KAAK,CAACwB,GAAE,KAAM,GAAG,CA