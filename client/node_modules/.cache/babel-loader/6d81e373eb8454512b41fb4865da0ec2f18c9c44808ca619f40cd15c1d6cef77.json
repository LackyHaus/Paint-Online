{"ast":null,"code":"import { onMounted, ref } from \"vue\";\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\nimport toolstate from \"@/store/toolstate\";\nimport Brush from \"@/tools/Brush\";\nexport default {\n  name: \"PaintCanvas\",\n  setup() {\n    const canvasElement = ref(null);\n    onMounted(() => {\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\n      toolstate.setTool(new Brush(canvasElement.value));\n    });\n    return {\n      canvasElement // Передаем ссылку в шаблон\n    };\n  },\n  methods: {\n    mouseDownHandler() {\n      canvasState.pushToUndo();\n    },\n    keyupHandler(event) {\n      console.log(`Key: ${event.key}, Ctrl: ${event.ctrlKey}, Shift: ${event.shiftKey}`);\n      if (event.ctrlKey && event.shiftKey && event.key === \"z\") {\n        canvasState.Redo(); // Вызов метода\n      } else if (event.ctrlKey && event.key === \"z\") {\n        canvasState.Undo(); // Вызов метода\n      }\n    }\n  },\n  mounted() {\n    document.addEventListener('keyup', this.keyupHandler);\n  },\n  unmounted() {\n    document.removeEventListener('keyup', this.keyupHandler);\n  }\n};","map":{"version":3,"names":["onMounted","ref","canvasState","toolstate","Brush","name","setup","canvasElement","setCanvas","value","setTool","methods","mouseDownHandler","pushToUndo","keyupHandler","event","console","log","key","ctrlKey","shiftKey","Redo","Undo","mounted","document","addEventListener","unmounted","removeEventListener"],"sources":["D:\\Vue Projects\\paintonline\\src\\components\\PaintCanvas.vue"],"sourcesContent":["<template>\r\n  <div class=\"canvas\">\r\n    <canvas @mousedown=\"mouseDownHandler\" ref=\"canvasElement\" width=\"600\" height=\"400\"></canvas>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { onMounted, ref } from \"vue\";\r\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\r\nimport toolstate from \"@/store/toolstate\";\r\nimport Brush from \"@/tools/Brush\";\r\n\r\nexport default {\r\n  name: \"PaintCanvas\",\r\n  setup() {\r\n    const canvasElement = ref(null);\r\n\r\n    onMounted(() => {\r\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\r\n      toolstate.setTool(new Brush(canvasElement.value))\r\n    });\r\n\r\n    return {\r\n      canvasElement, // Передаем ссылку в шаблон\r\n    };\r\n  },\r\n\r\n  methods: {\r\n    mouseDownHandler() {\r\n      canvasState.pushToUndo();\r\n    },\r\n\r\n    keyupHandler(event) {\r\n      console.log(`Key: ${event.key}, Ctrl: ${event.ctrlKey}, Shift: ${event.shiftKey}`);\r\n      if (event.ctrlKey && event.shiftKey && event.key === \"z\") {\r\n        canvasState.Redo(); // Вызов метода\r\n      } else if (event.ctrlKey && event.key === \"z\") {\r\n        canvasState.Undo(); // Вызов метода\r\n      }\r\n    }\r\n\r\n  },\r\n\r\n  mounted () {\r\n  document.addEventListener('keyup', this.keyupHandler)\r\n  },\r\n  unmounted () {\r\n    document.removeEventListener('keyup', this.keyupHandler)\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"../styles/canvas.css\";\r\n</style>\r\n"],"mappings":"AAOA,SAASA,SAAS,EAAEC,GAAE,QAAS,KAAK;AACpC,OAAOC,WAAU,MAAO,qBAAqB,EAAE;AAC/C,OAAOC,SAAQ,MAAO,mBAAmB;AACzC,OAAOC,KAAI,MAAO,eAAe;AAEjC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAKA,CAAA,EAAG;IACN,MAAMC,aAAY,GAAIN,GAAG,CAAC,IAAI,CAAC;IAE/BD,SAAS,CAAC,MAAM;MACdE,WAAW,CAACM,SAAS,CAACD,aAAa,CAACE,KAAK,CAAC,EAAE;MAC5CN,SAAS,CAACO,OAAO,CAAC,IAAIN,KAAK,CAACG,aAAa,CAACE,KAAK,CAAC;IAClD,CAAC,CAAC;IAEF,OAAO;MACLF,aAAa,CAAE;IACjB,CAAC;EACH,CAAC;EAEDI,OAAO,EAAE;IACPC,gBAAgBA,CAAA,EAAG;MACjBV,WAAW,CAACW,UAAU,CAAC,CAAC;IAC1B,CAAC;IAEDC,YAAYA,CAACC,KAAK,EAAE;MAClBC,OAAO,CAACC,GAAG,CAAC,QAAQF,KAAK,CAACG,GAAG,WAAWH,KAAK,CAACI,OAAO,YAAYJ,KAAK,CAACK,QAAQ,EAAE,CAAC;MAClF,IAAIL,KAAK,CAACI,OAAM,IAAKJ,KAAK,CAACK,QAAO,IAAKL,KAAK,CAACG,GAAE,KAAM,GAAG,EAAE;QACxDhB,WAAW,CAACmB,IAAI,CAAC,CAAC,EAAE;MACtB,OAAO,IAAIN,KAAK,CAACI,OAAM,IAAKJ,KAAK,CAACG,GAAE,KAAM,GAAG