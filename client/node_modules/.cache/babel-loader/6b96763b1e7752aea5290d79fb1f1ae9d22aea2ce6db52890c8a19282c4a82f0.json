{"ast":null,"code":"import { onMounted, ref } from \"vue\";\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\nimport toolstate from \"@/store/toolstate\";\nimport Brush from \"@/tools/Brush\";\nexport default {\n  name: \"PaintCanvas\",\n  setup() {\n    const canvasElement = ref(null);\n    onMounted(() => {\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\n      toolstate.setTool(new Brush(canvasElement.value));\n    });\n    return {\n      canvasElement // Передаем ссылку в шаблон\n    };\n  },\n  methods: {\n    mouseDownHandler() {\n      canvasState.pushToUndo();\n    },\n    keyupHandler(event) {\n      if (event.ctrlKey && event.key === \"z\") {\n        canvasState.Undo;\n      } else if (event.ctrlKey && event.shiftKey && event.key === \"z\") {\n        canvasState.Redo;\n      }\n    }\n  },\n  mounted() {\n    document.addEventListener('keyup', this.keyupHandler);\n  },\n  destroyed() {\n    document.removeEventListener('keyup', this.keyupHandler);\n  }\n};","map":{"version":3,"names":["onMounted","ref","canvasState","toolstate","Brush","name","setup","canvasElement","setCanvas","value","setTool","methods","mouseDownHandler","pushToUndo","keyupHandler","event","ctrlKey","key","Undo","shiftKey","Redo","mounted","document","addEventListener","destroyed","removeEventListener"],"sources":["D:\\Vue Projects\\paintonline\\src\\components\\PaintCanvas.vue"],"sourcesContent":["<template>\r\n  <div class=\"canvas\">\r\n    <canvas @mousedown=\"mouseDownHandler\" ref=\"canvasElement\" width=\"600\" height=\"400\"></canvas>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { onMounted, ref } from \"vue\";\r\nimport canvasState from \"@/store/canvasState\"; // Подключаем canvasState\r\nimport toolstate from \"@/store/toolstate\";\r\nimport Brush from \"@/tools/Brush\";\r\n\r\nexport default {\r\n  name: \"PaintCanvas\",\r\n  setup() {\r\n    const canvasElement = ref(null);\r\n\r\n    onMounted(() => {\r\n      canvasState.setCanvas(canvasElement.value); // Передаем ссылку на canvas в state\r\n      toolstate.setTool(new Brush(canvasElement.value))\r\n    });\r\n\r\n    return {\r\n      canvasElement, // Передаем ссылку в шаблон\r\n    };\r\n  },\r\n\r\n  methods: {\r\n    mouseDownHandler() {\r\n      canvasState.pushToUndo();\r\n    },\r\n\r\n    keyupHandler(event) {\r\n      if (event.ctrlKey && event.key === \"z\") {\r\n        canvasState.Undo\r\n      } else if (event.ctrlKey && event.shiftKey && event.key === \"z\") {\r\n        canvasState.Redo\r\n      }\r\n\r\n    }\r\n  },\r\n\r\n  mounted () {\r\n  document.addEventListener('keyup', this.keyupHandler)\r\n  },\r\n  destroyed () {\r\n    document.removeEventListener('keyup', this.keyupHandler)\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"../styles/canvas.css\";\r\n</style>\r\n"],"mappings":"AAOA,SAASA,SAAS,EAAEC,GAAE,QAAS,KAAK;AACpC,OAAOC,WAAU,MAAO,qBAAqB,EAAE;AAC/C,OAAOC,SAAQ,MAAO,mBAAmB;AACzC,OAAOC,KAAI,MAAO,eAAe;AAEjC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAKA,CAAA,EAAG;IACN,MAAMC,aAAY,GAAIN,GAAG,CAAC,IAAI,CAAC;IAE/BD,SAAS,CAAC,MAAM;MACdE,WAAW,CAACM,SAAS,CAACD,aAAa,CAACE,KAAK,CAAC,EAAE;MAC5CN,SAAS,CAACO,OAAO,CAAC,IAAIN,KAAK,CAACG,aAAa,CAACE,KAAK,CAAC;IAClD,CAAC,CAAC;IAEF,OAAO;MACLF,aAAa,CAAE;IACjB,CAAC;EACH,CAAC;EAEDI,OAAO,EAAE;IACPC,gBAAgBA,CAAA,EAAG;MACjBV,WAAW,CAACW,UAAU,CAAC,CAAC;IAC1B,CAAC;IAEDC,YAAYA,CAACC,KAAK,EAAE;MAClB,IAAIA,KAAK,CAACC,OAAM,IAAKD,KAAK,CAACE,GAAE,KAAM,GAAG,EAAE;QACtCf,WAAW,CAACgB,IAAG;MACjB,OAAO,IAAIH,KAAK,CAACC,OAAM,IAAKD,KAAK,CAACI,QAAO,IAAKJ,KAAK,CAACE,GAAE,KAAM,GAAG,EAAE;QAC/Df,WAAW,CAACkB,IAAG;MACjB;IAEF;EACF,CAAC;EAEDC,OAAMA,CAAA,EAAK;IACXC,QAAQ,CAACC,gBAAgB,CAAC,OAAO,EAAE,IAAI,CAACT,YAAY;EACpD,CAAC;EACDU,SAAQA,CAAA,EAAK;IACXF,QAAQ,CAACG,mBAAmB,CAAC,OAAO,EAAE,IAAI,CAACX,YAAY;EACzD;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}